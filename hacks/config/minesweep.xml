<?xml version="1.0" encoding="ISO-8859-1"?>

<screensaver name="minesweep" _label="Mine Sweep">

	<command arg="-root"/>
	
	<number 
		id="width" 
		type="spinbutton" 
		args="-width %" 
		_label="Width"
		low="5"
		high="80"
		default="30"/>
	<number 
		id="height" 
		type="spinbutton" 
		args="-height %" 
		_label="Height"
		low="5"
		high="80"
		default="16"/>
	<number
		id="bombcount"
		type="spinbutton"
		args="-bombcount %"
		_label="Bomb Count"
		low="5"
		high="6391"
		default="99"/> <!-- currently no real way to make the high variable off of the -->

	

	<!-- Used for playing the screen saver as a demo
	<video href="https://www.youtube.com/watch?v=lVEi089s1_c"/>
	-->
	<xscreensaver-updater />

	<_description>
Playes MineSweeper

Written by Albert Andrew Spencer; 2017.
</_description>
</screensaver>
